generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Book{
  id Int @id @default(autoincrement())
  title String
  genre String[]
  description String
  image String
  price Float
  author String
  publication_date DateTime @db.Date
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  cart CartItem[] 

  @@map(name:"books")
}

model CartItem{
  id Int @id @default(autoincrement())
  quantity Int
  total_amount Float 
  books Book? @relation(fields: [book_id],references: [id])
  book_id Int?
  users User? @relation(fields: [user_id],references: [id])
  user_id Int?  
  order Order? @relation(fields: [order_id],references: [id])
  order_id Int?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name:"cart_items")
}

model Order{
  id Int @id @default(autoincrement())
  delivery_charge Float
  delivery_address String?
  total Float
  status Status? @default(PENDING)
  client_secret String?
  payment_intent_id String?
  cart_items CartItem[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name:"orders")
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  username String?
  password String
  role Role? @default(USER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  cart CartItem[] 

  @@map(name:"users")
}




enum Role{
  USER
  ADMIN
}

enum Status{
  PENDING
  FAILED
  PAID
  DELIVERED
  CANCELED
}
