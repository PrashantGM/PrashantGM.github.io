generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Book{
  id Int @id @default(autoincrement())
  title String
  genre String[]
  description String
  image String
  price Int
  author String
  publication_date DateTime @db.Date
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user User[] 

  @@map(name:"books")
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  username String?
  password String
  role Role? @default(USER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  reading_list Book[] 
  @@map(name:"users")
}




enum Role{
  USER
  ADMIN
}
